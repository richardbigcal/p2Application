<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/home_background">


        <EditText
            android:id="@+id/dt_Name"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:hint="Fullname"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            />
        <EditText
            android:id="@+id/dt_Address"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:hint="Address"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="100dp"
            />

        <EditText
            android:id="@+id/dt_Email"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="165dp"
            />
        <EditText
            android:id="@+id/dt_Phone"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:hint="phone"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="235dp"
            />

        <TextView
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:text="What are you reporting?"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="325dp"
            />

        <RadioGroup
            android:id="@+id/rdbReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp">
            <RadioButton
                android:id="@+id/rdbLost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lost Pet"
                android:textSize="20dp"
                android:textStyle="bold"

                />
            <RadioButton
                android:id="@+id/rdbFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Found Pet"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RadioGroup>



        <TextView
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:text="Breed"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="465dp"
            />
        <EditText
            android:id="@+id/edt_breed"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:hint="Aspin? Mixed breed? Pure breed?"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="505dp"
            />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="580dp"

            />

        <TextView
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:text="Pet Description"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="660dp"
            />

        <EditText
            android:id="@+id/edt_pet_description"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:hint="Please be as detailed as possible, especially if reporting a lost pet."
            android:inputType="textMultiLine"
            android:gravity="top"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="12dp"
            android:background="@drawable/et_cust"
            android:layout_marginTop="705dp"
            />

        <TextView
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:text="Upload Photo"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="890dp"
            />


        <ImageView
            android:layout_width="350dp"
            android:layout_height="290dp"
            android:layout_marginTop="930dp"
            android:id="@+id/imView"
            android:background="@drawable/et_cust"
            />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnUploadImage"
            android:text="Submit"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@color/CornflowerBlue"
            android:layout_marginTop="1350dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSelectImage"
            android:text="Select Images"
            android:backgroundTint="@color/CornflowerBlue"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="1250dp"
            />



    </RelativeLayout>
</ScrollView>
